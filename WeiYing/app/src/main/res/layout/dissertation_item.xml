<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white_translucent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/dissImg"
            android:layout_width="300pt"
            android:src="@mipmap/aa"
            android:layout_height="250pt"
            android:layout_centerVertical="true"
            android:background="@mipmap/default_200" />
    </RelativeLayout>

    <TextView
        android:layout_marginLeft="5pt"
        android:gravity="center"
        android:text="到大的发发"
          android:layout_width="300pt"
        android:id="@+id/disstv"
        style="@style/small_tv_style"
        android:background="@color/gray_light"
        android:layout_alignParentBottom="true"
         android:singleLine="true"/>
</RelativeLayout>
